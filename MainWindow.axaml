<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        Background="AliceBlue"
        x:Class="AOP_Homework.MainWindow"
        x:Name="Main_Window">
        
        <StackPanel>
            <Canvas x:Name="Canvas" PointerPressed="Canvas_PointerPressed"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Load File" Click="Load" Background="DimGray" HotKey="Ctrl+o"/>
                <Button Content="Save File" Click="Save" Background="DimGray" HotKey="Ctrl+s"/>
            </StackPanel>
            <ColorPicker x:Name="ColorPicker" HorizontalAlignment="Center" Background="Black" Foreground="FloralWhite"/>
        </StackPanel>
</Window>
